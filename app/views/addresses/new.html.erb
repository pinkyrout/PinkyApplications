<h1>Enter your address </h1>
<%= form_for([@address.user, @address],  url: user_addresses_path, method: :post) do |f| %>
<%= f.label :hometown %>
<br>
<%= f.text_field :hometown %>
<br>
<%= f.label :state %>
<br>
<%= f.text_field :state %>
<br>
<%= f.label :country %>
<br>
<%= f.text_field :country %>
<br>
<%= f.label :pincode %>
<br>
<%= f.text_field :pincode %>
<%= f.hidden_field :user_id, :value => params[:user_id]%>
<%= f.submit "Save" %>
<% end %>