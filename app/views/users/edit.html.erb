<%= form_for(@user) do |f| %>
<%= f.label :name %>
<br>
<%= f.text_field :name %>
<br>
<%= f.label :gender %>
<br>
<%= f.text_field :gender %>
<br>
<%= f.label :date_of_birth %>
<br>
<%= f.text_field :date_of_birth %>
<br>
<%= f.label :email %>
<br>
<%= f.text_field :email %>
<br>
<%= f.label :password %>
<br>
<%= f.password_field :password %>
<br>
<%= f.label :contact_no %>
<br>
<%= f.text_field :contact_no %>
<br>
<%= f.label :password, "Confirm Password" %>
<br>
<%= f.password_field :password_confirmation %>
<br>
<%= f.submit "Edit" %>
<% end %>